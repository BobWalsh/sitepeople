<h1 class="mt-4 text-xl">GET /sites</h1>
<% if @sites.count > 0 %>
  <div class="w-full ml-4">
    <% @sites.each do |site| %>
      <ul>
        <li class="mt-4 text-sm font-medium leading-5 text-gray-900 whitespace-no-wrap ">
          number: <%= site.site_number %>
        </li>
        <li class="text-sm font-medium leading-5 text-gray-900 whitespace-no-wrap ">
          facility_name: <%= site.facility_name %>
        </li>
        <li class="text-sm font-medium leading-5 text-gray-900 whitespace-no-wrap ">
          country: <%= site.site_country %>
        </li>
        <li class="text-sm font-medium leading-5 text-gray-900 whitespace-no-wrap ">
          address: <%= site.site_address %>
        </li>
      </ui>
    <% end %>
  <% else %>
    <p> No Sites found</p>
  <% end %>
</div>
